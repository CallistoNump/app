<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECF5">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="156dp"
        android:layout_height="147dp"
        app:srcCompat="@drawable/vidraimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="156dp"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Пароль"
                android:textColor="#B36AFC"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="******"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="36dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="30dp"
            android:paddingTop="4dp"
            android:text="Забыли пароль?"
            android:textColor="#B36AFC"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="13dp"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#B36AFC"
            android:onClick="to_menu"
            android:text="Войти"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:backgroundTint="#EDECF5"
            android:onClick="to_sozdanie"
            android:text="Нет аккаунта? Зарегистрироваться...!"
            android:textAllCaps="false"
            android:textColor="#B36AFC"
            android:textSize="15dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="36dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="           Вход"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="italic" />

        <View
            android:id="@+id/view1"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:background="#B36AFC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Логин"
                android:textColor="#B36AFC"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="example@gmail.com"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>